# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
REDIS_URL=redis://localhost:6379

# ============================================================================
# CLAUDE AI CONFIGURATION
# ============================================================================
CLAUDE_API_KEY_1=sk-ant-api03-your_first_api_key_here
CLAUDE_API_KEY_2=sk-ant-api03-your_second_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ============================================================================
# GOOGLE SHEETS CONFIGURATION
# ============================================================================
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

DEFAULT_WORK_START_TIME=09:00
DEFAULT_WORK_END_TIME=18:00
SLOT_DURATION_MINUTES=30

MAX_QUEUE_SIZE=1000
MESSAGE_RETRY_ATTEMPTS=3
MESSAGE_PROCESSING_TIMEOUT=30

# Dialogue Archiving
DIALOGUE_ARCHIVE_AFTER_HOURS=24
ARCHIVE_COMPRESSION_ENABLED=true

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=60
FLOOD_PROTECTION_THRESHOLD=10

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
ADMIN_EMAILS=admin@example.com
CONSULTANT_EMAILS=consultant@example.com

# ============================================================================
# PLATFORMS CONFIGURATION (true/false)
# ============================================================================
# Увімкніть тільки потрібні платформи. Детальніше: PLATFORMS.md
TELEGRAM_ENABLED=true
WHATSAPP_ENABLED=false
VIBER_ENABLED=false
INSTAGRAM_ENABLED=false
TELEPHONY_ENABLED=false

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
# Отримати токен: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ============================================================================
# WHATSAPP BOT CONFIGURATION
# ============================================================================
# Налаштування: https://developers.facebook.com/apps
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# ============================================================================
# VIBER BOT CONFIGURATION
# ============================================================================
# Створити бота: https://partners.viber.com
VIBER_BOT_TOKEN=your_viber_bot_token_here
VIBER_BOT_NAME=Ім'я Вашого Бота

# ============================================================================
# INSTAGRAM BOT CONFIGURATION
# ============================================================================
# Налаштування: https://developers.facebook.com/apps
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_PAGE_ID=your_instagram_page_id_here
INSTAGRAM_VERIFY_TOKEN=your_instagram_verify_token_here

# ============================================================================
# TELEPHONY CONFIGURATION (Binotel)
# ============================================================================
# Binotel API credentials (отримати в кабінеті Binotel)
BINOTEL_API_KEY=your_binotel_api_key_here
BINOTEL_API_SECRET=your_binotel_api_secret_here
BINOTEL_PHONE_NUMBER=your_phone_number_here

# Google Cloud для Speech-to-Text та Text-to-Speech
# Створити credentials: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=credentials.json

